= form_for :session, :url => session_url(:redirect_id => params[:redirect_id]), :html => {:class => 'form-horizontal'} do |f|
	%fieldset
		%legend= t 'views.interface.login'
		- if attempted_signin?
			%br
			.alert.alert-error= t 'views.interface.something_wrong'
		.control-group
			= f.label :email, t('views.interface.email'), :class => 'control-label'
			.controls
				= f.text_field :email, :class => 'input-xlarge'
		.control-group
			= f.label :password, t('views.interface.password'), :class => 'control-label'
			.controls
				= f.password_field :password, :class => 'input-xlarge'
		.control-group
			= f.label :remember_me, t('views.interface.remember_me'), :class => 'control-label'
			.controls
				= f.check_box :remember_me
	.form-actions
		= f.submit t('views.interface.enter'), :disable_with => t('views.interface.entering'), :class => 'btn btn-primary'
		= link_to t('views.interface.cancel'), Redirect.find(params[:redirect_id]).url, :disable_with => 'Processing', :class => 'btn'