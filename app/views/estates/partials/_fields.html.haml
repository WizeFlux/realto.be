%fieldset
	%legend= t 'views.estate.information'

	= f.fields_for :title_translations do |ff|
		.control-group
			= ff.label :en, (t('models.title') + ' (En)'), :class => 'control-label'
			.controls
				= ff.text_field :en, :class => 'input-xlarge', :value => (f.object.title_translations['en'] unless f.object.new?)
		.control-group
			= ff.label :ru, (t('models.title') + ' (Ru)'), :class => 'control-label'
			.controls
				= ff.text_field :ru, :class => 'input-xlarge', :value => (f.object.title_translations['ru'] unless f.object.new?)

	= f.fields_for :teaser_translations do |ff|
		.control-group
			= ff.label :en, (t('models.teaser') + ' (En)'), :class => 'control-label'
			.controls
				= ff.text_area :en, :class => 'input-xlarge', :rows => 5, :value => (f.object.teaser_translations['en'] unless f.object.new?)
		.control-group
			= ff.label :ru, (t('models.teaser') + ' (Ru)'), :class => 'control-label'
			.controls
				= ff.text_area :ru, :class => 'input-xlarge', :rows => 5, :value => (f.object.teaser_translations['ru'] unless f.object.new?)

	.control-group
		= f.label :slug, t('models.estate.slug'), :class => 'control-label'
		.controls
			= f.text_field :slug, :class => 'input-xlarge', :disabled => !f.object.new?

	.control-group
		= f.label :district_id, t('models.district.base'), :class => 'control-label'
		.controls
			= f.select :district_id, options_from_collection_for_select(District.all, 'id', 'title', f.object.district_id), {:include_blank => true}, :class => 'input-xlarge'

%fieldset
	%legend= t 'views.estate.privat'
	
	.control-group
		= f.label :comission, t('models.estate.comission'), :class => 'control-label'
		.controls
			= f.text_field :comission, :class => 'input-xlarge'
	
	.control-group
		= f.label :margin, t('models.estate.margin'), :class => 'control-label'
		.controls
			= f.text_field :margin, :class => 'input-xlarge'

	.control-group
		= f.label :comment, t('models.estate.comment'), :class => 'control-label'
		.controls
			= f.text_area :comment, :rows => 5, :class => 'input-xlarge'

	.control-group
		%label.control-label= t 'models.agency.contact.contacts'
		.controls
			= f.fields_for :contacts do |ff|
				= ff.select :kind, options_for_select(Contact.kinds, :selected => ff.object.kind), {}, :class => 'input-small'
				= raw('&nbsp')
				= ff.text_field :entry, :class => 'input-xlarge'
				= raw('&nbsp')
				= ff.link_to_remove :class => 'btn-danger btn btn-small' do
					%i.icon-minus.icon-white
				%br
				%br
			= f.link_to_add :contacts, :class => 'btn-success btn btn-small' do
				%i.icon-plus.icon-white