= nested_form_for estate, :html => {:class => 'form-horizontal'} do |f|
	= render 'estates/partials/fields', :f => f
	.form-actions
		= f.button raw('<i class="icon-ok icon-white"></i> Create'), :disable_with => 'Creating...', :type => :submit, :class => 'btn btn-primary'
		= link_to estates_url, :class => 'btn', :disable_with => 'Canceling...', :remote => true do
			%i.icon-remove
			Cancel